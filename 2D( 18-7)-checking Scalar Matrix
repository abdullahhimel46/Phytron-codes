#include <stdio.h>
int main()
{
    int row,col;
    printf("Enter number of row and column: ");
    scanf("%d%d",&row,&col);
    // Declare a 2D array
    int a[row][col]; 

    for(int i = 0; i < row; i++){
        for(int j =0; j< col; j++){
            scanf("%d", &a[i][j]);
         // scanf("%d", &a[i]); => for 1D
        }
    }
    
    int flag = 1; //assuming it's a scalar matrix

//Step 1:
    //check if the matrix is square or not
    if( row != col){
   /*If the number of rows and columns are not equal,
    set 'flag' to 0 (means,matrix isn't square)*/
        flag = 0; //the matrix isn't square
    }

    //Step 2:
//diagonal = elements where the row and column indices are the same
    //check if the matrix is diagonal or not
    for(int i = 0; i < row; i++){
        for(int j =0; j< col; j++){
        //check the diagonal elements 
        if(i == j) // Check if the current element is on the main diagonal
        {
            if(a[i][j] != a[0][0]) // Check if current element is equal to the first element on the main diagonal
                flag = 0;
        }
        
        //check other elements (non-diagonal elements)
        else if (a[i][j] != 0)  // Check if the current non-diagonal element is not zero.
            flag = 0; //matrix isn't diagonal
        } 
    }

//Step 3:
    if( flag == 1 )
        printf("Scelar matrix\n");
    else
        printf("Not Scelar\n");


    return 0;
}
