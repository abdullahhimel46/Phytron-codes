// fibonacci series using recursion
/*
//base case
0!=1
1!=1
---------------
2!=2*1!
3!=3*2!
4!=4*3!
n!=n*(n-1)!
*/

#include <stdio.h>
int fibo(int n)
{
    if (n == 0 || n == 1)
        return 1;
    else
        return n * fibo(n - 1);
}
int main()
{
    printf("Enter number: ");
    int x;
    scanf("%d", &x);
    int f = fibo(x);
    printf("%d\n", f);
    return 0;
}
